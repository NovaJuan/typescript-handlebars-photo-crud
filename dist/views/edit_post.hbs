<h1 class="text-center">Edit image</h1>
<p class="text-center">(if you don't want to edit something just don't type on the input.)</p>
<div class="row mt-2">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-body">
        <form action="/edit/{{{post._id}}}" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">@</span>
              </div>
              <input type="text" class="form-control" placeholder="User: {{{post.user}}}" name="user" aria-label="Username" aria-describedby="basic-addon1">
              <input type="hidden" name="oldUser" value="{{{post.user}}}">
            </div>
          </div>
          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title: {{{post.title}}}" />
            <input type="hidden" name="oldTitle" value="{{{post.title}}}">
          </div>
          <div class="form-group">
            <input type="text" name="description" placeholder="Description: {{{post.description}}}" class="form-control" />
            <input type="hidden" name="oldDescription" value="{{{post.description}}}">
          </div>
          <div class="form-group">
            {{#if post.image.filename}}
              <label for="">Old Image:</label>
              <img src="/uploads/{{{post.image.filename}}}" class="w-100 mb-2" alt="">
            {{/if}}
            <label for="image">Add/change image (if you want):</label>
            <input type="file" name="image" id='image' />
            <input type="hidden" name="oldImagePath" value="{{{post.image.path}}}">
            <input type="hidden" name="oldImageFilename" value="{{{post.image.filename}}}">
          </div>
          <button type="submit" class="btn btn-success btn-block">Edit Post</button>
        </form>
      </div>
    </div>
  </div>
</div>