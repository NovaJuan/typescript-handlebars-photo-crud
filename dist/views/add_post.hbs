<h1 class="text-center">Add image</h1>
<div class="row mt-2">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-body">
        <form action="/add" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">@</span>
              </div>
              <input type="text" class="form-control" placeholder="User" required name="user" aria-label="Username" aria-describedby="basic-addon1">
            </div>
          </div>
          <div class="form-group">
            <input type="text" name="title" class="form-control" required placeholder="Title" />
          </div>
          <div class="form-group">
            <input type="text" name="description" placeholder="Description" class="form-control" />
          </div>
          <div class="form-group">
            <label for="image">Your image (if you want):</label>
            <input type="file" name="image" id='image' />
          </div>
          <button type="submit" class="btn btn-success btn-block">Add Post</button>
        </form>
      </div>
    </div>
  </div>
</div>